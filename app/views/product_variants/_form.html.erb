<%= form_for(@product_variant, html: { class: "edit-form" }) do |f| %>
  <% if @product_variant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product_variant.errors.count, "error") %> prohibited this product_variant from being saved:</h2>

      <ul>
      <% @product_variant.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :product_id %>
    <%= f.collection_select :product_id, Product.all, :id, :name, include_blank: false %>
  </div>
  <div class="field">
    <%= f.label :picture %>
    <%= image_tag(@product_variant.picture, size: '150') if @product_variant.picture? %><br>
    <%= f.file_field :picture %>
  </div>
  <div class="field">
    <%= f.label :sku %>
    <%= f.text_field :sku %>
  </div>  
  <div class="field">
    <%= f.label :size_id %>
    <%= f.collection_select :size_id, Size.all, :id, :name, include_blank: true %>
  </div>
  <div class="field">
    <%= f.label :color_id %>
    <%= f.collection_select :color_id, Color.all, :id, :name, include_blank: true %>
  </div>
  <div class="field">
    <%= f.label :stock %>
    <%= f.number_field :stock %>
  </div>
  <div class="field">
    <%= f.label :price %>
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :discount %>
    <%= f.text_field :discount %>
  </div>  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
